<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RadioBtn"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="당신의 고향은?"
        android:textSize="30dp"
        android:layout_margin="30dp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:gravity="center"/>


    <RadioGroup
        android:id="@+id/rg_01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RadioButton
            android:id="@+id/rb01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/area01"/>
        <RadioButton
            android:id="@+id/rb02"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/area02"/>
        <RadioButton
            android:id="@+id/rb03"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/area03"/>
        <RadioButton
            android:id="@+id/rb04"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/area04"/>
        <RadioButton
            android:id="@+id/rb05"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/area05"/>
        <RadioButton
            android:id="@+id/rb06"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/area06"/>
        <RadioButton
            android:id="@+id/rb07"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/area07"/>
    </RadioGroup>

</LinearLayout>