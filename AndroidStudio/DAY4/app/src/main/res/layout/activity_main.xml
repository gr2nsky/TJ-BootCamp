<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="05/31 Lectures"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="#000000"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp">
        <TextView
            android:id="@+id/lec01"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="1. calender and timeSpinner"
            android:layout_marginRight="10dp"
            android:textColor="#000000"/>
        <TextView
            android:id="@+id/lec02"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="2. ListTest"
            android:layout_marginRight="10dp"
            android:textColor="#000000"/>
        <TextView
            android:id="@+id/lec03"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="3. List from array"
            android:layout_marginRight="10dp"
            android:textColor="#000000"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp">
            <TextView
                android:id="@+id/lec04"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="4. Weatger"
                android:layout_marginRight="10dp"
                android:textColor="#000000"/>
        </LinearLayout>

    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="05/31 Exercises"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="#000000"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp">
        <TextView
            android:id="@+id/Exercise01Btn"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="Exercise01"
            android:layout_marginRight="10dp"
            android:textColor="#000000"/>




    </LinearLayout>

</LinearLayout>