<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EX04"
    android:orientation="vertical">

    <TextView
        android:id="@+id/ex04_tv"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hello World"
        android:textSize="10px"
        android:gravity="center" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="now text size : "/>
        <TextView
            android:id="@+id/textSizeTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="px"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">
        <Button
            android:layout_weight="1"
            android:id="@+id/fontSizeUpBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="font size up"
            android:layout_margin="5dp"
            android:backgroundTint="#000000"/>
        <Button
            android:layout_weight="1"
            android:id="@+id/fontSizeDownBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="font size down"
            android:textColor="#000000"
            android:backgroundTint="#E3DEDE"/>
    </LinearLayout>


</LinearLayout>