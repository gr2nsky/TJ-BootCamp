<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.Dial"
    android:orientation="vertical"
    android:layout_weight="1"
    android:padding="20dp">

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:gravity="center">
    <TextView
        android:id="@+id/tv_dial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="30dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/btn_dial_1"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="1"
                android:textSize="50dp"
                android:textColor="@color/black"
                android:gravity="center"/>
            <TextView
                android:id="@+id/btn_dial_2"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="2"
                android:textSize="50dp"
                android:textColor="@color/black"
                android:gravity="center"/>
            <TextView
                android:id="@+id/btn_dial_3"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="3"
                android:textSize="50dp"
                android:textColor="@color/black"
                android:gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/btn_dial_4"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="4"
                android:textSize="50dp"
                android:textColor="@color/black"
                android:gravity="center"/>
            <TextView
                android:id="@+id/btn_dial_5"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="5"
                android:textSize="50dp"
                android:textColor="@color/black"
                android:gravity="center"/>
            <TextView
                android:id="@+id/btn_dial_6"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="6"
                android:textSize="50dp"
                android:textColor="@color/black"
                android:gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/btn_dial_7"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="7"
                android:textSize="50dp"
                android:textColor="@color/black"
                android:gravity="center"/>
            <TextView
                android:id="@+id/btn_dial_8"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="8"
                android:textSize="50dp"
                android:textColor="@color/black"
                android:gravity="center"/>
            <TextView
                android:id="@+id/btn_dial_9"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="9"
                android:textSize="50dp"
                android:textColor="@color/black"
                android:gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/btn_dial_star"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="*"
                android:textSize="50dp"
                android:textColor="@color/black"
                android:gravity="center"/>
            <TextView
                android:id="@+id/btn_dial_0"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="0"
                android:textSize="50dp"
                android:textColor="@color/black"
                android:gravity="center"/>
            <TextView
                android:id="@+id/btn_dial_shop"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="#"
                android:textSize="50dp"
                android:textColor="@color/black"
                android:gravity="center"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/btn_dial_call"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerInParent="true"
                android:src="@drawable/call"/>
            <ImageView
                android:id="@+id/btn_dial_remove"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="40dp"
                android:src="@drawable/icon_remove"/>

        </RelativeLayout>
    </LinearLayout>
</LinearLayout>