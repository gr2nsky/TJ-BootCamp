<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.FriendDetail">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/friend_detail_background_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/friend_default_background_img"/>

            <ImageView
                android:id="@+id/friend_detail_img"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_above="@+id/nameLinear"
                android:layout_centerInParent="true"
                android:padding="10dp"
                android:src="@drawable/friend_default_img" />
            <LinearLayout
                android:id="@+id/nameLinear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_above="@+id/friend_detail_info_linear"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/friend_detail_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="이름"
                    android:textSize="40dp"
                    android:textColor="#000000"
                    android:background="#00000000"
                    android:enabled="false" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/friend_detail_info_linear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_alignParentBottom="true"
                android:orientation="vertical"
                android:background="#83ffffff"
                android:layout_margin="30dp"
                android:paddingTop="25dp"
                android:paddingLeft="25dp"
                android:paddingRight="25dp"
                android:paddingBottom="10dp">
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="전화번호"
                        android:layout_gravity="center"
                        android:textSize="20dp"/>
                    <EditText
                        android:layout_weight="2"
                        android:id="@+id/friend_detail_phone"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="전화번호"
                        android:textSize="20dp"
                        android:background="#00ffffff"
                        android:layout_marginLeft="15dp"
                        android:textColor="#000000"
                        android:inputType="number"
                        android:enabled="false"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="이메일"
                        android:layout_gravity="center"
                        android:textSize="20dp"/>
                    <EditText
                        android:layout_weight="2"
                        android:id="@+id/friend_detail_email"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="이메일"
                        android:textSize="20dp"
                        android:background="#00ffffff"
                        android:layout_marginLeft="15dp"
                        android:textColor="#000000"
                        android:enabled="false"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/chacngeable_group_tv"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="그룹"
                        android:layout_gravity="center"
                        android:textSize="20dp"/>
                    <EditText
                        android:layout_weight="2"
                        android:id="@+id/friend_detail_group"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="그룹"
                        android:textSize="20dp"
                        android:background="#00ffffff"
                        android:layout_marginLeft="15dp"
                        android:textColor="#000000"
                        android:enabled="false"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/chacngeable_elation_tv"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="관계"
                        android:layout_gravity="center"
                        android:textSize="20dp"/>
                    <EditText
                        android:layout_weight="2"
                        android:id="@+id/friend_detail_relation"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="관계"
                        android:textSize="20dp"
                        android:background="#00ffffff"
                        android:layout_marginLeft="15dp"
                        android:textColor="#000000"
                        android:enabled="false"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/friend_modify_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="수정"/>
                    <View
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="0dp"/>
                    <Button
                        android:id="@+id/friend_detail_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="삭제"/>
                </LinearLayout>

            </LinearLayout>
        </RelativeLayout>
</FrameLayout>