<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="05/31 Lectures"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="#000000"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp">
        <TextView
            android:id="@+id/gravityBtn"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="1. gravity"
            android:layout_marginRight="10dp"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/weight01Btn"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="2. weight01"
            android:layout_marginRight="10dp"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/imageViewBtn"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="3. imageView"
            android:layout_marginRight="10dp"
            android:textColor="#000000"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="4.buttonEdit"
            android:layout_marginRight="10dp"
            android:textColor="#000000"
            android:id="@+id/buttonEditBtn"/>

        <TextView
            android:id="@+id/frameBtn"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="5.frame"
            android:layout_marginRight="10dp"
            android:textColor="#000000"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/snackBtn"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="6.SnackBar"
            android:layout_marginRight="10dp"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/tv01Btn"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="7.TextVireAttr"
            android:layout_marginRight="10dp"
            android:textColor="#000000"/>


    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="05/31 Exercises"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="#000000"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp">
        <TextView
            android:id="@+id/Exercise01Btn"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="Exercise01"
            android:layout_marginRight="10dp"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/Exercise02Btn"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="Exercise02"
            android:layout_marginRight="10dp"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/Exercise03Btn"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="Exercise03"
            android:layout_marginRight="10dp"
            android:textColor="#000000"/>


    </LinearLayout>


</LinearLayout>